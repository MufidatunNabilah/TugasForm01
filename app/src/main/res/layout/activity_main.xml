<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
tools:context="id.sch.smktelkom_mlg.tugas01.xirpl3019.form.MainActivity">

    <TextView
        android:text="Kursus Berenang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:paddingBottom="16dp"
        android:paddingTop="16dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:text="Nama Anak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nmanak" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editnamaanak" />

    <TextView
        android:text="Nama Orang Tua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nmortu" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editNamaOrtu" />

    <TextView
        android:text="E-mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editEmail" />
    <TextView
        android:text="Jenis Kelamin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rgkelamin" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rgKelamin">

        <RadioButton
            android:text="Laki - Laki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioLaki"
            android:layout_weight="1"
            android:checked="false" />

        <RadioButton
            android:text="Perempuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioPerempuan"
            android:layout_weight="1"
            android:checked="false" />
    </RadioGroup>

    <TextView
        android:text="Daerah Asal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/asal" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spnrasal"
        android:entries="@array/asal"/>

    <TextView
        android:text="Hobi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hobi" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cbMembaca"
        android:text="Membaca"
        android:checked="false" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cbBerenang"
        android:text="Berenang"
        android:checked="false" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cbMenulis"
        android:text="Menulis"
        android:checked="false" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cbBersepeda"
        android:text="Bersepeda"
        android:checked="false" />

    <Button
        android:text="Kirim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sebarkan" />
</LinearLayout>
 </ScrollView>
